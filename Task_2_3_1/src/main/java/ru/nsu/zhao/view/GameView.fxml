<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.nsu.zhao.controller.GameController">

    <stylesheets>
        <URL value="@/ru/nsu/zhao/styles.css" />
    </stylesheets>

    <top>
        <HBox styleClass="game-info">
            <Label text="分数: " />
            <Label fx:id="scoreLabel" text="0" />
            <Label fx:id="lengthLabel" text="长度: 1" />
        </HBox>
    </top>

    <center>
        <Canvas fx:id="gameCanvas" width="600" height="400" />
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button text="暂停" onAction="#pauseGame" styleClass="control-button" />
            <Button text="返回菜单" onAction="#backToMenu" styleClass="control-button" />
        </HBox>
    </bottom>

</BorderPane>
